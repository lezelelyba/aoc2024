name: Environments - AWS Prod - Push to release branches

on:
  push:
    branches:
      - dev
      - stage
      - master
    paths:
      - 'environments/aws/prod/**'
      - '.github/workflows/environments-aws-prod-release.yml'

permissions:
  contents: write

jobs:
  bump_version:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Turnstyle
        uses: softprops/turnstyle@v3
      - name: Bump Version of Component
        id: bump
        uses: ./.github/actions/bump-version
        with:
          branch-name: ${{github.ref_name}}
          work-dir: environments/aws/prod
          tag-prefix: environments/aws/prod
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}