{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
       {
        "name": "Run Web",
        "type": "go",
        "request":"launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/web/main.go",
        "args": [],
        "showLog": true
       },
       {
        "name": "Run TLS Web",
        "type": "go",
        "request":"launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/web/main.go",
        "args": [],
        "showLog": true,
        "env": {
          "PORT": "8443",
          "ENABLE_HTTPS": "true",
          "TLS_CERT_FILE": "${workspaceFolder}/cmd/web/tls/cert.pem",
          "TLS_KEY_FILE": "${workspaceFolder}/cmd/web/tls/key.pem" 
        },
       },
       {
        "name": "Run Any",
        "type": "go",
        "request":"launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/cli/main.go",
        "args": ["--day", "${input:day}", "--filename", "${workspaceFolder}/inputs/${input:input_freeform}", "--part", "${input:part}"],
        "showLog": true
       },
       {
        "name": "Run test part1",
        "type": "go",
        "request":"launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/cli/main.go",
        "args": ["--day", "d3", "--filename", "${workspaceFolder}/inputs/d3_test.txt"],
        "showLog": true
       },
       {
        "name": "Run test part2",
        "type": "go",
        "request":"launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/cli/main.go",
        "args": ["--day", "d3", "--filename", "${workspaceFolder}/inputs/d3_test.txt", "--part", "2"],
        "showLog": true
       }
    ],

    "inputs": [
       {
            "id": "day",
            "type": "promptString",
            "description":"Day - which day are we solving?",
            "default": "d1"
       },
       {
            "id": "part",
            "type": "promptString",
            "description":"Part - which part are we solving?",
            "default": "1"
       },
       {
            "id": "input",
            "type": "pickString",
            "description":"Input - what input to use?",
            "options": ["test.txt", "input.txt"],
            "default": "test.txt"
       },
       {
            "id": "input_freeform",
            "type": "promptString",
            "description":"Input - what input to use? filename within inputs folder",
            "default": "test.txt"
       } 
    ]
}