<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{block "title" .}}AoC 2024 Solver{{end}}</title>
  <link rel="stylesheet" href="/static/css/styles.css">
  <link rel="icon" href="/static/images/favicon.png">
  {{block "head" .}}{{end}}
</head>
<body>
  <header>
    <h1>Advent of Code 2024 Solver</h1>
    <nav>
    <p>
      |
      <a href="/">Home</a>
      |
      <a href="/docs">Documentation</a>
      |
      <a href="https://adventofcode.com/2024" target="_blank">Advent of Code</a>
      |
      <a href="https://github.com/lezelelyba/aoc2024/" target="_blank">GitHub</a>
      |
    </p>
    </nav>
  </header>

  <main>
    <script>
      window.AppConfig = Object.freeze({
        backends: [
          {
            name: "Local",
            baseApiUrl: window.location.origin,
          },
        ],
      })
    </script>
    <section class="backend">
        <strong>Backend:</strong>
        <div id="backend-list" class="backend-list">
        </div>
        <script>
          el = document.getElementById("backend-list");
          for (backend of window.AppConfig.backends) {
            const span = document.createElement("span");
            span.id = `backend-${backend.name}`;
            span.classList.add("backend-not-available");
            span.textContent = backend.baseApiUrl;
            el.appendChild(span);
          }
        </script>
        <div id="selected-backend" data-name="" hidden></div>
    </section>
    {{block "content" .}}{{end}}
  </main>

  <footer>
    <div class="footer">
      <div class="server-info">
        <span>Server info: {{.Hostname}}</span>
        <span>Version: {{.Config.Version}}</span>
      </div>
    </div>
  </footer>
</body>
</html>